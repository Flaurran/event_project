{% extends '@App/layout/layout.html.twig' %}

{% block content %}
    <div>
        <h1>Mes projets</h1>
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                {% for project in projects %}
                    <tr>
                        <td><a href="{{ path('project_manage', {'id': project.id }) }}">{{ project.id }}</a></td>
                        <td>{{ project.title }}</td>
                        <td>{{ project.description }}</td>
                        <td>{{ project.date|date('d-m-Y H:i:s') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}